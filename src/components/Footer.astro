---
// src/components/Footer.astro
import { useTranslations, type Lang } from "@/i18n";
const t = useTranslations(Astro.currentLocale as Lang);
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-links">
      <a href={`/${Astro.currentLocale}/about`}>{t({ fr: "À propos", en: "About", ar: "من نحن" })}</a>
      <span class="separator">•</span>
      <a href={`/${Astro.currentLocale}/contact-us`}>{t({ fr: "Nous contacter", en: "Contact Us", ar: "اتصل بنا" })}</a>
      <span class="separator">•</span>
      <a href={`/${Astro.currentLocale}/privacy-policy`}>{t({ fr: "Politique de confidentialité", en: "Privacy Policy", ar: "سياسة الخصوصية" })}</a>
    </div>
    
    <div class="copyright">
      © {new Date().getFullYear()} PharmaSOS. {t({
        fr: "Tous droits réservés",
        en: "All rights reserved",
        ar: "جميع الحقوق محفوظة"
      })}
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 2rem 1rem;
    background: #000000;
    margin-top: 4rem;
  }

  .footer-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .footer-links a {
    color: #9CA3AF;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: #F3F4F6;
  }

  .separator {
    color: #4B5563;
    font-size: 0.8rem;
  }

  .copyright {
    color: #6B7280;
    font-size: 0.9rem;
  }

  @media (max-width: 640px) {
    .footer {
      padding: 1.5rem 1rem;
    }

    .footer-links {
      gap: 0.75rem;
    }

    .footer-links a {
      font-size: 0.9rem;
    }
  }
</style>